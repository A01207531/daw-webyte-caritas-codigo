<section class="row">
  <h3 class="center col s12">Nuestros proyectos</h3>
  <div class="col s12 m3">
    <div class="card">
      <div class="card-content">
        <h4>Filtros</h4>
        <div class='input-field'>
          <input class='validate' type='text' name='name' id='name' />
          <label for='name'>Busca por nombre: </label>
        </div>
        <div class="block">    
          <h5>Por programa</h5>
          <p>
            <label>
              <input class="with-gap" name="programa" type="radio" />
              <span>Programa 1</span>
            </label>
          </p>
          <p>
            <label>
              <input class="with-gap" name="programa" type="radio" />
              <span>Programa 2</span>
            </label>
          </p>
          <p>
            <label>
              <input class="with-gap" name="programa" type="radio" />
              <span>Programa 3</span>
            </label>
          </p>
        </div>

        <div class="block">
          <h5>Orden</h5>
          <p>
            <label>
              <input class="with-gap" name="orden" type="radio" />
              <span>Ascendente</span>
            </label>
          </p>
          <p>
            <label>
              <input class="with-gap" name="orden" type="radio" />
              <span>Descendente</span>
            </label>
          </p>
        </div>
        {{!-- <div id="test-slider"></div> --}}
      </div>
    </div>
  </div>
  <div class="row col s12 m9">
    {{#if proyectos}}
      {{#each proyectos}}
        <div class="col s12 m4">
              
          <div class="card small sticky-action">
            <div class="card-image ">
              <img class="activator" src="https://picsum.photos/500/300/?random">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4">{{nombre}}<i class="material-icons right">more_vert</i></span>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4">{{nombre}}<i class="material-icons right">close</i></span>
              <p>{{descripcion}}</p>
            </div>
            <div class="card-action">
              <a href="/proyecto">Detalles</a>
              <a href="https://paypal.com">Â¡Dona!</a>
            </div>
          </div>
              
        </div>
      {{/each}}
    {{/if}}
  </div>
</section>

